{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "EC2HostOperations",
      "Effect": "Allow",
      "Action": [
        "ec2:AllocateHosts",
        "ec2:ReleaseHosts",
        "ec2:DescribeHosts"
      ],
      "Resource": "*"
    },
    {
      "Sid": "VPCNetworkAccess",
      "Effect": "Allow",
      "Action": [
        "ec2:CreateNetworkInterface",
        "ec2:DescribeNetworkInterfaces",
        "ec2:DeleteNetworkInterface"
      ],
      "Resource": "*"
    }
  ]
}
